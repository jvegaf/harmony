---
import { translations } from '@/i18n/translations';

const base = import.meta.env.BASE_URL;
const en = translations.en.hero;
const es = translations.es.hero;
const GITHUB_REPO = 'https://github.com/jvegaf/harmony';
const GITHUB_RELEASES = 'https://github.com/jvegaf/harmony/releases';
---

<section class="hero" id="hero">
  <div class="container hero-container">
    <div class="hero-content fade-in">
      <img
        src={`${base}assets/harmony-logo.png`}
        alt="Harmony logo"
        class="hero-logo"
        width="100"
        height="100"
      />

      <h1 class="hero-title">
        <span class="gradient-text">Harmony</span>
      </h1>

      <p class="hero-tagline">
        <span data-lang="en">{en.tagline}</span>
        <span data-lang="es" class="hidden">{es.tagline}</span>
      </p>

      <p class="hero-description">
        <span data-lang="en">{en.description}</span>
        <span data-lang="es" class="hidden">{es.description}</span>
      </p>

      <div class="hero-actions">
        <a href={GITHUB_RELEASES} class="btn btn-primary" target="_blank" rel="noopener noreferrer">
          <!-- Download icon -->
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" y1="15" x2="12" y2="3"/></svg>
          <span data-lang="en">{en.cta_download}</span>
          <span data-lang="es" class="hidden">{es.cta_download}</span>
        </a>
        <a href={GITHUB_REPO} class="btn btn-secondary" target="_blank" rel="noopener noreferrer">
          <!-- GitHub icon -->
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
          <span data-lang="en">{en.cta_github}</span>
          <span data-lang="es" class="hidden">{es.cta_github}</span>
        </a>
      </div>
    </div>

    <div class="hero-screenshot fade-in">
      <img
        src={`${base}assets/harmony-main-screen.png`}
        alt="Harmony main screen showing the music library with waveform player"
        loading="eager"
      />
    </div>
  </div>
</section>

<style>
  .hero {
    padding-top: calc(var(--navbar-height) + var(--space-12));
    padding-bottom: var(--space-16);
    overflow: hidden;
  }

  .hero-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: var(--space-12);
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 700px;
  }

  .hero-logo {
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-lg);
    margin-bottom: var(--space-6);
  }

  .hero-title {
    font-size: var(--font-size-hero);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: var(--space-4);
  }

  .hero-tagline {
    font-size: clamp(1.125rem, 2.5vw, 1.5rem);
    font-weight: 600;
    color: var(--color-text-secondary);
    margin-bottom: var(--space-4);
  }

  .hero-description {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin-bottom: var(--space-8);
    max-width: 580px;
  }

  .hero-actions {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-4);
    justify-content: center;
    width: 100%;
  }

  .hero-screenshot {
    width: 100%;
    max-width: 1100px;
  }

  .hero-screenshot img {
    width: 100%;
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-screenshot);
    border: 1px solid var(--color-border);
  }

  /* Mobile */
  @media (max-width: 639px) {
    .hero {
      padding-top: calc(var(--navbar-height) + var(--space-8));
      padding-bottom: var(--space-10);
    }

    .hero-actions {
      flex-direction: column;
    }

    .hero-actions .btn {
      width: 100%;
      justify-content: center;
    }
  }

  /* Desktop */
  @media (min-width: 1024px) {
    .hero {
      padding-top: calc(var(--navbar-height) + var(--space-20));
      padding-bottom: var(--space-20);
    }
  }
</style>
